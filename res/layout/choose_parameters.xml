<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="600dip" 
	android:layout_height="450dip"
	android:background="@drawable/choose_parameter_background">
	<ImageView
		android:id="@+id/ImageView_01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginTop="30dip"
		android:layout_marginLeft="40dip"/>
	<TextView
		android:id="@+id/TextView_01"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_above="@+id/TextView_02"
		android:layout_alignLeft="@+id/TextView_02"
		android:layout_marginBottom="-10dip"
		android:textColor="#4F9809"
		android:textSize="24sp"/>
	<TextView
		android:id="@+id/TextView_02"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/ImageView_01"
		android:layout_alignBottom="@+id/ImageView_01"
		android:layout_marginLeft="10dip"
		android:text="......................................................................................................."/>
	
	<TextView
		android:id="@+id/TextView_03"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/ImageView_01"
		android:layout_alignLeft="@+id/ImageView_01"
		android:layout_marginTop="40dip"
		android:text="@string/trainingType"
		android:textSize="19sp"
		android:textColor="#A1A1A1"/>
			
	<TextView
		android:id="@+id/TextView_04"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/TextView_03"
		android:layout_alignLeft="@+id/TextView_02"
		android:layout_alignBottom="@+id/TextView_03"
		android:textSize="19sp"
		android:textColor="#292929"/>
	
	<TextView
		android:id="@+id/TextView_05"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/TextView_03"
		android:layout_alignLeft="@+id/TextView_03"
		android:layout_marginTop="40dip"
		android:text="@string/trainingSample"
		android:textSize="19sp"
		android:textColor="#A1A1A1"/>
			
	<TextView
		android:id="@+id/TextView_06"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@+id/TextView_05"
		android:layout_alignLeft="@+id/TextView_04"
		android:layout_alignTop="@+id/TextView_05"
		android:textSize="19sp"
		android:textColor="#292929"/>
	
	
	<TextView
		android:id="@+id/TextView_07"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/TextView_06"
		android:layout_marginTop="40dip"
		android:text="................................................................................................................................"
		android:layout_centerHorizontal="true"/>
	
	
	<LinearLayout 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_below="@+id/TextView_07"
		android:layout_marginTop="25dip"
		android:layout_centerHorizontal="true">
		<ImageView
			android:id="@+id/ImageView_02"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/button_back_"
			android:layout_marginRight="60dip"
			android:clickable="true"/>
		<ImageView
			android:id="@+id/ImageView_03"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/button_ok_"
			android:layout_marginLeft="60dip"
			android:clickable="true"/>
	</LinearLayout>
</RelativeLayout>