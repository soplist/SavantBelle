<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:flex="http://schemas.android.com/apk/res/com.flextronics.cn.activity"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">  
  
  	<include android:id="@+id/background" layout="@layout/included_transparent_border" />
  	<!--<include android:id="@+id/background" layout="@layout/included_background" />
  	<include android:id="@+id/top" layout="@layout/included_top" />
  	
	--><LinearLayout 
		android:layout_width="wrap_content" 
		android:id="@+id/LinearLayout01" 
		android:layout_height="wrap_content" 		
		android:layout_centerInParent="true" 
		android:orientation="vertical">
		<LinearLayout 
			android:layout_width="wrap_content" 
			android:id="@+id/LinearLayout02" 
			android:layout_height="wrap_content">
			<LinearLayout 
				android:layout_width="wrap_content" 
				android:id="@+id/LinearLayout03" 
				android:layout_height="wrap_content" 
				android:orientation="vertical">
				<TextView
			  		android:layout_width="wrap_content" 
			  		android:layout_height="wrap_content" 
			  		android:text="@string/userName"
			  		android:textColor="#fff"
					android:layout_marginTop="12dip"
					android:layout_marginBottom="12dip"/>
				<TextView
			  		android:layout_width="wrap_content" 
			  		android:layout_height="wrap_content" 
			  		android:text="@string/password"
			  		android:textColor="#fff"
					android:layout_marginTop="12dip"
					android:layout_marginBottom="12dip"/>
				<TextView
			  		android:layout_width="wrap_content" 
			  		android:layout_height="wrap_content" 
			  		android:text="@string/password2"
			  		android:textColor="#fff"
					android:layout_marginTop="12dip"
					android:layout_marginBottom="12dip"/>
				<TextView
			  		android:layout_width="wrap_content" 
			  		android:layout_height="wrap_content" 
			  		android:text="@string/email"
			  		android:textColor="#fff"
					android:layout_marginTop="12dip"
					android:layout_marginBottom="12dip"/>
			</LinearLayout>
			<LinearLayout 
				android:layout_width="wrap_content" 
				android:id="@+id/LinearLayout04" 
				android:layout_height="wrap_content"  
				android:orientation="vertical">
				<EditText 
					android:id="@+id/EditText01"
					android:layout_width="280dip" 
					android:layout_height="25dip"
					android:background="@drawable/user_management_edit_text_1"
					android:layout_marginTop="9dip"
					android:layout_marginBottom="9dip"
					android:selectAllOnFocus="true"
					android:singleLine="true"
					android:maxLength="40"
					android:scrollHorizontally="true"
					android:hint="@string/plsInputUserName"
					android:textSize="13sp"/>
				<EditText 
					android:id="@+id/EditText02"
					android:layout_width="280dip"
					android:layout_height="25dip"
					android:background="@drawable/user_management_edit_text_1"
					android:layout_marginTop="9dip"
					android:layout_marginBottom="9dip"
					android:password="true"
					android:selectAllOnFocus="true"
					android:singleLine="true"
					android:maxLength="40"
					android:scrollHorizontally="true"
					android:hint="@string/plsInputPassword"
					android:textSize="13sp"/>
				<EditText 
					android:id="@+id/EditText03"
					android:layout_width="280dip"
					android:layout_height="25dip"
					android:background="@drawable/user_management_edit_text_1"
					android:layout_marginTop="9dip"
					android:layout_marginBottom="9dip"
					android:password="true"
					android:selectAllOnFocus="true"
					android:singleLine="true"
					android:maxLength="40"
					android:scrollHorizontally="true"
					android:hint="@string/plsInputPassword2"
					android:textSize="13sp"/>
				<EditText 
					android:id="@+id/EditText04"
					android:layout_width="280dip"
					android:layout_height="25dip"
					android:background="@drawable/user_management_edit_text_1"
					android:layout_marginTop="9dip"
					android:layout_marginBottom="9dip"
					android:selectAllOnFocus="true"
					android:singleLine="true"
					android:maxLength="50"
					android:scrollHorizontally="true"
					android:hint="@string/plsInputEmail"
					android:textSize="13sp"/>
			</LinearLayout>		
		</LinearLayout>
		
		<TextView
	  		android:layout_width="wrap_content" 
	  		android:layout_height="wrap_content" 
	  		android:text="@string/chooseIcon"
	  		android:textColor="#fff"
			android:layout_marginTop="12dip"
			android:layout_marginBottom="12dip"/>
		<Gallery 
			android:id="@+id/Gallery01" 
			android:layout_width="match_parent" 
			android:layout_height="80dip"
			android:background="@drawable/user_managerment_gally_1"/>
		<TextView
	  		android:layout_width="wrap_content" 
	  		android:layout_height="wrap_content" 
	  		android:text="@string/chooseBackground"
	  		android:textColor="#fff"
			android:layout_marginTop="12dip"
			android:layout_marginBottom="12dip"/>
		<Gallery 
			android:id="@+id/Gallery02" 
			android:layout_width="match_parent" 
			android:layout_height="match_parent"
			android:background="@drawable/user_managerment_gally_2"/>
	</LinearLayout>

