<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
 	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
   	android:layout_height="wrap_content">
	<RelativeLayout
		android:layout_width="wrap_content"
	   	android:layout_height="wrap_content"
	   	android:layout_centerInParent="true">
	   	<ImageView 			
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"	
		   	android:layout_centerInParent="true"
	   		android:src="@drawable/pver_cs_tuyang_board_3_4"/>
	   	<ImageView 
	    	android:id="@+id/ImageView01"   		
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignParentLeft="true"
	    	android:layout_alignParentTop="true"
	    	android:layout_marginLeft="1dip"
	    	android:layout_marginTop="1dip"
	    	android:src="@drawable/cs_tuyang_item_3_0"/>
	    <ImageView 
	    	android:id="@+id/ImageView02"   		
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignTop="@+id/ImageView01"
	    	android:layout_toRightOf="@+id/ImageView01"
	    	android:layout_marginLeft="43dip"
	    	android:src="@drawable/cs_tuyang_item_3_0"/>
	    <ImageView 
	    	android:id="@+id/ImageView03"   		
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@+id/ImageView01"
	    	android:layout_alignLeft="@+id/ImageView01"
	    	android:layout_marginTop="38dip"
	    	android:src="@drawable/cs_tuyang_item_3_0"/>
	    <ImageView 
	    	android:id="@+id/ImageView04"   		
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_alignTop="@+id/ImageView03"
	    	android:layout_alignLeft="@+id/ImageView02"
	    	android:src="@drawable/cs_tuyang_item_3_0"/>

		
	</RelativeLayout> 
</RelativeLayout>